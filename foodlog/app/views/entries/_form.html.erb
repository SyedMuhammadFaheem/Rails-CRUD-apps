<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red" class='message is-danger'>
      <div class='message-header'>
        <p><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</p>
      </div>
      <div class='message-body'>
        <ul>
          <% entry.errors.each do |error| %>
            <li><%= error.full_message %></li>
