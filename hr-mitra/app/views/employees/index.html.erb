<div class='col lg-10'>
    <%=flash[:notice]%>
    <div class='card rounded-0 mt-5 mb-5'>
        <div class='card-body'>
            <h2 class='text-center'>Listing Employees</h2>
        </div>
    </div>

    <%= link_to 'Create New Employee', new_employee_path, class: 'btn btn-primary mb-5'%>
    <table class='table table-bordered'>
        <thead>
            <tr>
                <th>Name</th>
                <th>Personal Email</th>
                <th>Full Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% @employees.each do |employee| %>
                <tr>
                    <td><%= employee.name %></td>
                    <td><%= employee.personal_email %></td>
                    <td><%= employee.address %></td>
                    <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-primary' %></td>
                </tr>
            <%end%>
        </tbody>
    </table>
</div>